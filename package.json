{
  "private": true,
  "name": "ampreact",
  "version": "2.1.0",
  "description": "React AMP starter",
  "scripts": {
    "dev": "bnr dev",
    "build": "bnr build:prod",
    "build:dev": "bnr build:dev",
    "build:prod": "bnr build:prod",
    "build:staging": "bnr build:staging",
    "start": "bnr start",
    "lint": "eslint -c ./package.json ./pages server.js"
  },
  "betterScripts": {
    "start": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "development",
        "APP_ENV": "development"
      }
    },
    "build:basic": {
      "command": "next build",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:dev": {
      "command": "bnr build:basic",
      "env": {
        "APP_ENV": "development"
      }
    },
    "build:staging": {
      "command": "bnr build:basic",
      "env": {
        "APP_ENV": "staging"
      }
    },
    "build:prod": {
      "command": "bnr build:basic",
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonybudianto/ampreact.git"
  },
  "author": "Antony Budianto <antonybudianto@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "babel-plugin-styled-components": "1.8.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1"
  },
  "dependencies": {
    "better-npm-run": "^0.1.1",
    "express": "~4.16.3",
    "next": "~7.0.1",
    "react": "~16.5.2",
    "react-amphtml": "3.0.1",
    "react-dom": "~16.5.2",
    "styled-components": "3.4.9"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "react/jsx-filename-extension": "off",
      "jsx-a11y/label-has-for": "off",
      "arrow-body-style": "off",
      "comma-dangle": "off",
      "no-console": "off"
    }
  }
}
